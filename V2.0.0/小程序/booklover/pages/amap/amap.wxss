/**amap.wxss**/

.container {
  position: absolute;
  width: 100%;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  height: 100%;
  z-index: 2;
}

.map {
  width: 100%;
  height: 100%;
}

.map_text {
  position: fixed;
  bottom: 0rpx;
  height: 120rpx;
  left: 0rpx;
  right: 0rpx;
  font-size: 28rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
  padding: 40rpx 50rpx;
  display: flex;
  align-items: flex-end;
}

.map_text-iphonex {
  padding-bottom: 88rpx;
}

.map_text .mapmark {
  width: 80rpx;
  margin-right: 20rpx;
}

.map_text .mapmsg {
  flex: auto;
  text-align: left;
}

.map_text text {
  font-size: 28rpx;
  display: block;
}

.map_text .important {
  font-size: 24rpx;
  font-weight: bold;
}

.map_text .h1 {
  font-size: 40rpx;
  font-weight: bold;
}

.map_text.whitebg {
  background-color: rgba(255, 255, 255, 1);
  color: rgba(0, 0, 0, 0.8);
}

.map_text.blackbg {
  background-color: rgba(37, 37, 37, 1);
  color: rgba(255, 255, 255, 0.8);
}
